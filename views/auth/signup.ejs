<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>

    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/signup" method="POST" novalidate>
      <h1>Sign Up</h1>
      <div class="form-control">
        <label for="email">Email</label>
        <input class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" type="email" id="email" name="email" required value="<%= oldInput.email %>">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" type="password" id="password" name="password" required value="<%= oldInput.password %>">
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>" type="password" id="confirmPassword" name="confirmPassword" required value="<%= oldInput.confirmPassword %>">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit">Sign Up</button>
  </main>
</body>

<%- include('../includes/end.ejs') %>